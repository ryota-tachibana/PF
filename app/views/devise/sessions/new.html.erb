<h2 class="text-center">ログイン</h2>
<div class="pass-edit">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field-p">
    <h4><%= f.label :ニックネーム %><br /></h4>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :size=>"40" %>
  </div>

  <div class="field-p">
    <h4><%= f.label :メールアドレス %><br /></h4>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
  </div>

  <div class="field-p">
    <h4><%= f.label :パスワード %><br /></h4>
    <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
