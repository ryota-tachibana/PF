<h2 div class="text-center">〜アニメ一覧〜</h2>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- ジャンル検索の部分テンプレート　-->
      <%= render 'videos/genre_search' %>
    </div>
<!-- 映画一覧表示 -->
    <div class="col-xs-9">
      <% @videos.each do |video| %>
        <div class="box">
          <div>
          <%= link_to video_path(video) do %>
          <%= attachment_image_tag @video, :image, :fill,45,45, fallback: "noimage.jpg",size:"100x150" %>
          <% end %>
          </div>
          <div><%= video.name %></div>
          <div><h5>カテゴリー<%= video.category_id %></h5></div>
          <div><h5>ジャンル<%= video.genre_id %></h5></div>
          <!-- お気に入り機能 -->
          <% if video.favorited_by?(current_user) %>
            <%= link_to video_favorites_path(video.id), method: :delete do %>
              <span><%= button_tag(class: "btn btn-default btn-md") do %>
            <%= content_tag :span, "", class: "glyphicon glyphicon-star" %>
            <%= video.favorites.count %>
            </span>
              <% end %>
            <% end %>
          <% else %>
            <%= link_to video_favorites_path(video.id), method: :post  do %>
              <span><%= button_tag(class: "btn btn-default btn-md") do %>
              <%= content_tag :span, "", class: "glyphicon glyphicon-star-empty" %>
              <%= video.favorites.count %>
              </span>
              <% end %>
            <% end %>
          <% end %>
          <!-- ここまで -->

        </div>
      <% end %>
    </div>
  </div>
</div>