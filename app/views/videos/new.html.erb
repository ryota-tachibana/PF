<% if @video.errors.any? %>

    <%= @video.errors.count %>errors prohibited this obj from being saved:

    <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

<% end %>
<h2 class="title text-center">作品登録</h2>
<div class="container">
  <div class="row">
  <%= form_for(@video, url:videos_path, method: :post) do |f| %>
  <div class="col-xs-2  col-xs-offset-1">
    <%= f.label :image, "画像" %>
    <div class="image_field">
      <%= attachment_image_tag @video, :image, format: "jpeg", fallback: "noimage.jpg", class: "new_video_image" %>
      <div class="image_btn">
        <%= f.attachment_field :image, id: "file" %>
      </div>
      <div id="img_field" onClick="$('#file').click()" >
        <span class="btn btn-default">画像選択</span>
      </div>
    </div>
  </div>
<div class="col-xs-7 col-xs-offset-2">
<table>
  <thead>
  <tr>
    <th></th> 
    <th></th>
  </tr>
  </thead>
  <tbody>
    <tr width="100" height="100">
      <td><%= f.select :category_id,[["映画","映画"],["ドラマ","ドラマ"],["アニメ","アニメ"],["それ以外のカテゴリー","それ以外のカテゴリー"]], include_blank:"--カテゴリー選択--" %></td>
      <td><%= f.select :genre_id,[["アクション","アクション"],["冒険","冒険"],["コメディ","コメディ"],["ミステリー","ミステリー"],["ヒューマン","ヒューマン"],["SF","SF"],["ファンタジー","ファンタジー"],["ホラー","ホラー"],["犯罪","犯罪"],["それ以外のジャンル","それ以外のジャンル"]], include_blank:"--ジャンル選択--" %></td>
    </tr>
    <tr width="70" height="100">
      <td><%= f.label :name, "作品名" %></td>
      <td><%= f.text_field :name, :size=>"50" %></td>
    </tr>
    <tr width="70" height="100">
      <td><%= f.label :summary, "あらすじ" %></td>
      <td><%= f.text_area :summary, :size=>"50x7" %></td>
    </tr>
  </tbody>
</table>
    <%= f.submit '新規登録', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
</div>

