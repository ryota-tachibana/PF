<h2 class="title text-center">〜映画一覧〜</h2>
<!-- 作品検索の部分テンプレート　-->
<div class="search-form">
  <%= render 'videos/search_form' %>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <!-- ジャンル検索の部分テンプレート　-->
      <%= render 'videos/genre_search' %>
    </div>

    <div class="col-xs-9">
      <!-- 映画一覧表示 -->
      <% @videos.each do |video| %>
        <%= render 'videos/videos_index', video: video %>
      <% end %>
    </div>
  </div>
</div>
<div class="text-center"><h4><%= paginate @videos %></h4></div>