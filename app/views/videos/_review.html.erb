<div class="container">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
    <%= attachment_image_tag (review.user), :profile_image, :fill,45,45, fallback: "no_image.jpg",size:"100x100" %>
    <h3><%= review.user.name %></h3>
    </div>
    <div class="col-xs-7 col-xs-offset-2">
      <div id="star-rating-<%= review.id %>"></div>
      <script>
      $('#star-rating-<%= review.id %>').raty({
        size: 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        readOnly: true,
        score: <%= review.rating %>,
      });
      </script>
      <%= review.rating %>点<br>
      <%= review.impression %>
      <% if current_user == review.user %>
      <%= link_to '口コミを削除', review, method: :delete, remote: true, class:'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
