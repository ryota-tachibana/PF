<!DOCTYPE html>
<html>
  <head>
    <title>PF</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div id="wrapper">
  <header class="header-content">
    <% if user_signed_in? %>
      <ul class="nav nav-pills">
        <li><%= image_tag "logo.png", alt: "logo", id: "assets", class: "logo" %></li>
        <li><%= link_to 'トップ', root_path, class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to '映画', video_videos_movie_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'ドラマ', video_videos_drama_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'アニメ', video_videos_animation_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'その他', video_videos_another_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to '作品登録', new_video_path, class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'About', home_about_path, class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'マイページ', user_path(current_user), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "navbar-item button is-warning is-light" %></li>
      </ul>
    <% else %>
      <ul class="nav nav-pills">
        <li><%= image_tag "logo.png", alt: "logo", id: "assets", class: "logo" %></li>
        <li><%= link_to 'トップ', root_path, class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to '映画', video_videos_movie_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'ドラマ', video_videos_drama_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'アニメ', video_videos_animation_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'その他', video_videos_another_path(:video_id), class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'About', home_about_path, class: "navbar-item button is-warning is-light" %></li>
        <li><%= link_to 'ログイン/新規登録', new_user_session_path, class: "navbar-item button is-warning is-light" %></li>
      </ul>
    <% end %>
  </header>
    <main>
    <%= yield %>
    </main>
    <footer><%= image_tag "logo.png", alt: "logo", id: "assets", class: "logo" %></footer>
  </div>
  </body>
</html>
